    <section>
      <h1>Let's Import a new recipe from marmiton.org</h1>
      <p>Pick an ingredient</p>
      <form action="/import_recipes" method="GET">
        <label for="ingredients">Ingredients:</label>
        <br>
        <input  name="ingredients" type="text" >
        <br>
        <input type="submit" value="Submit">
      </form>
    </section>
<% @search.each_with_index do |recipe, index| %>
  <li>
    <%= recipe.title %>
  </li>
      <form action="/recipes" method="POST">
        <input hidden name="title" value="<%= recipe.title %>">
        <input hidden name="ingredients" value="<%= recipe.ingredients %>" >
        <input hidden id="rating" name="rating" value="<%= recipe.rating %>">
        <input hidden id="prep_time" name="prep_time" value="<%= recipe.prep_time %>">
        <br>
        <input type="submit" value="Import">
      </form>
<% end %>
